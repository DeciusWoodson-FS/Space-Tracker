{% extends '../layout.twig' %}

{% block body %}
    <div class="form-container">
        <h1>{{ action }} Galaxy</h1>
        <form method="POST" action="/galaxies{{ galaxy.id ? '/' ~ galaxy.id : '' }}" enctype="multipart/form-data">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" value="{{ galaxy.name }}" required>
            </div>
            
            <div class="form-group">
                <label>Size (Light Years)</label>
                <input type="number" name="size" value="{{ galaxy.size }}">
            </div>
            
            <div class="form-group">
                <label>Description</label>
                <textarea name="description" rows="4">{{ galaxy.description }}</textarea>
            </div>
            
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="image">
            </div>
            
            <button type="submit" class="btn">{{ action }}</button>
        </form>
    </div>
{% endblock %}